@model TimeOff
@{
    ViewBag.Title = "Request Time Off";
}
<h2>Request Time Off</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="RequestTime" method="post">

    <div class="form-group">
        <label asp-for="From">From This Date:</label>
        <input type="text" asp-for="From" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="To">To This Date:</label>
        <input type="text" asp-for="To" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Reason">Reason:</label>
        <input type="text" asp-for="Reason" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
