@model Project
@{
    string title = ViewBag.Action + " Employee";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Update" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProjectName"> Project Name: </label>
        <input asp-for="ProjectName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ProjectTimespan"> Project Time Span: </label>
        <input asp-for="ProjectTimespan" class="form-control">
    </div>

    <input type="hidden" asp-for="ProjectID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>




