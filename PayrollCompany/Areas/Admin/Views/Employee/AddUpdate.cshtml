@model Employee
@{
    string title = ViewBag.Action + " Employee";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Update" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">Employee's First Name: </label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="LastName">Employee's Last Name: </label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Title">Employee's Title: </label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Username">Employee's Username: </label>
        <input asp-for="Username" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Password">Employee's Password: </label>
        <input asp-for="Password" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Address">Employee's Address: </label>
        <input asp-for="Address" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="City">Employee's City: </label>
        <input asp-for="City" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="State">Employee's State: </label>
        <input asp-for="State" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ZipCode">Employee's Zip Code: </label>
        <input asp-for="ZipCode" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="DepartmentID">Department: </label>
        <select asp-for="DepartmentID"
                asp-items="@(new SelectList(ViewBag.Department,
                         "DepartmentID", "DepartmentName",
                         Model.DepartmentID.ToString()))"
                class="form-control"></select>
                </div>

        <input type="hidden" asp-for="EmployeeID" />

        <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>




