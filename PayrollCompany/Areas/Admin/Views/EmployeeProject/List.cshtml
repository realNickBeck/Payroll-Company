@model List<EmployeeProject>
@{
    ViewBag.Title = "Product Manager";
}
<h1>@ViewBag.Title</h1>
<div class="row">
    <div class="col-sm-2">
        <ul class="list-group">
            <a asp-action="List" asp-route-id="All"
               class="list-group-item
               @if (ViewBag.SelectedProjectName == "All") {
                    <text>active</text>
                } ">All</a>
            @foreach (Project c in ViewBag.Project)
            {
                <a asp-action="List" asp-route-id="@c.ProjectName"
               class="list-group-item
                         @(ViewBag.SelectedProjectName == c.ProjectName ? "active" : "")">
                    @c.ProjectName
                </a>
            }
        </ul>
    </div>
<div class="col-sm-10">
    </br>
    <p1></p1>
    <a asp-action="Assign" class="btn btn-primary bg-transparent text-primary">Assign New Project</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Project Name</th>
                <th>Employee Name</th>
                <th></th>

        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                        <tr>
                            <td>@p.Project.ProjectName </td>
                            <td>@p.Employee.FirstName @p.Employee.LastName </td>
                            <td>
                                <a class="btn btn-danger" asp-action="Deassign"
                                  asp-route-id="@p.EmployeeProjectID">Deassign</a>
                            </td>
                        </tr>


            }
        </tbody>
    </table>
</div>
</div>



